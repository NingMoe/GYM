<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gy.pj.sys.dao.SysEmployeeDao">
	<update id="updateObject">
		update gym_emp set
		name=#{name},
		gender=#{gender},
		age=#{age},
		idNumber=#{idNumber},
		eduBackground=#{eduBackground},
		department=#{department},
		position=#{position},
		salary=#{salary},
		hiredate=#{hiredate}
		where Id=#{Id}
	</update>
	<select id="findById" resultType="com.gy.pj.sys.entity.SysEmployee">
		select * from gym_emp
		where Id=#{Id}
	</select>
	<insert id="insertObject"
		parameterType="com.gy.pj.sys.entity.SysEmployee"
           useGeneratedKeys="true "
            keyProperty="id">
		insert into gym_emp
		(name,gender,age,idNumber,eduBackground,department,position,salary,hiredate)
		values
		(#{name},#{gender},#{age},#{idNumber},#{eduBackground},#{department},#{position},#{salary},#{hiredate})
	</insert>
	<delete id="deleteObject">
		delete from gym_emp
		where id in
		<foreach collection="ids" open="(" close=")" separator=","
			item="id">
			#{id}
		</foreach>
	</delete>
	<select id="findObject"
		resultType="com.gy.pj.sys.entity.SysEmployee">
		select *
		from gym_emp
		<include refid="queryWhereId" />
		order by id
	</select>
	<select id="getRowCount" resultType="int">
		select count(*)
		from gym_emp
		<include refid="queryWhereId" />
	</select>
	<sql id="queryWhereId">
		<where>
			<if test="name!=null and name!=''">
				name like concat("%",#{name},"%")
			</if>
		</where>
	</sql>
	<select id="findAllObject" resultType="com.gy.pj.sys.entity.SysEmployee">
		select *
		from gym_emp
		order by id
	</select>
	
	<update id="updateAvatar">
	update gym_emp set
	avatar=#{avatar}
	where Id=#{Id}
	</update>
</mapper>