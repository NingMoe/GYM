<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gy.pj.sys.dao.SysFoodDao">
	<select id="findObject"
		resultType="com.gy.pj.sys.entity.SysFood">
		select *
		<include refid="queryWhereId" />
		order by id desc
	</select>
	
	<delete id="deleteObjects">
		delete from gym_foods
		<where>
			<foreach collection="ids" item="id">
				or id=#{id}
			</foreach>
		</where>
	</delete>
	
	<insert id="insertObjects"
		parameterType="com.gy.pj.sys.entity.SysFood" useGeneratedKeys="true"
		keyProperty="id">
		insert into gym_foods
		(id,food,heat,protein,carbo,axunge,chol,vitamin,scope)
		values
		(null,#{food},#{heat},#{protein},#{carbo},#{axunge},#{chol},#{vitamin},#{scope})
	</insert>
	
	
	<update id="updataObjects">
	update gym_foods set food=#{food},heat=#{heat},
	protein=#{protein},
	carbo=#{carbo},
	axunge=#{axunge},
	chol=#{chol},
	vitamin=#{vitamin},
	scope=#{scope}
	where id=#{id}
	</update>
	
	<select id="findfoodsAndHeat" resultType="com.gy.pj.common.vo.Node">
	select food,heat,carbo from gym_foods
	</select>
	
	
	<select id="getRowCount" resultType="int">
		select count(*)
		<include refid="queryWhereId" />
	</select>
	
	<sql id="queryWhereId">
		from gym_foods
		<where>
			<if test="food!=null and food!=''">
				food like concat("%",#{food},"%")
			</if>
		</where>
	</sql>
</mapper> 